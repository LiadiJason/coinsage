@model IEnumerable<CoinsAge.Models.News>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between">
        <h4 class="d-block text-3 font-weight-bold">My News</h4>

        <p class="d-block"><a asp-action="Create" class="text-3">Create New <i class="fas fa-plus"></i></a></p>
    </div>

    <table class="table mt-4">
        <colgroup>
            <col span="1" style="width: 40%;">
            <col span="1" style="width: 15%;">
            <col span="1" style="width: 30%;">
            <col span="1" style="width: 15%;">
        </colgroup>
        <thead>
            <tr>
                <th class="text-left">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th class="text-center">
                    Category
                </th>
                <th class="text-center">
                    Publish Date Time
                </th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.PublishDateTime)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.NewsId"><i class="fas fa-edit mx-2 text-success"></i></a>
                        <a asp-action="Details" asp-route-id="@item.NewsId"><i class="fas fa-eye mx-2 text-info"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.NewsId"><i class="fas fa-trash-alt mx-2 text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
