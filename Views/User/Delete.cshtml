@model CoinsAge.Areas.Identity.Data.CoinsAge1User;

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-2 py-4 px-5 box-shadow-1 vh-100">
        <a asp-controller="Dashboard" asp-action="Index"><div class="p-2 cursor-pointer text-2 hover-1">Dashboard</div></a>
        <a asp-controller="User" asp-action="Index"><div class="p-2 cursor-pointer text-2 hover-1">Manage Writers</div></a>
        <a asp-controller="News" asp-action="IndexAdmin"><div class="p-2 cursor-pointer text-2 hover-1">Manage News</div></a>
        <a asp-controller="Category" asp-action="Index"><div class="p-2 cursor-pointer text-2 hover-1">Manage Categories</div></a>
    </div>
    <div class="col-10 py-4 px-5">
        <a asp-action="Index" class="d-block w-100 text-right text-3">Back to List <i class="fas fa-chevron-right"></i></a>
        <div class="d-flex">
            <div class="w-100">
                <h4 class="d-block text-3 font-weight-bold">Delete</h4>
                <div class="d-block"><b>Note: All of the news associated with this user will be deleted permanently!</b></div>
                <div class="d-block mt-2">Are you sure you want to delete this?</div>
                <div class="row w-100 mt-4">
                    <dt class="col-sm-3">
                        ID
                    </dt>
                    <dd class="col-sm-9">
                        : @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-3">
                        Full Name
                    </dt>
                    <dd class="col-sm-9">
                        : @Html.DisplayFor(model => model.FullName)
                    </dd>
                </div>

                <form class="mt-4" asp-action="Destroy" asp-controller="User">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>

        </div>
    </div>
</div>